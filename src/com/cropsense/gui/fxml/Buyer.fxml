<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.cropsense.gui.view.BuyerDashboard"
      alignment="CENTER"
      prefWidth="400"
      prefHeight="450">

    <Label text="CropSense - Buyer Dashboard"
           style="-fx-font-size:18px; -fx-font-weight:bold;" />

    <TextArea fx:id="area"
              editable="false"
              prefHeight="250"/>

    <TextField fx:id="idField"
               promptText="Product ID"/>

    <TextField fx:id="qtyField"
               promptText="Quantity"/>

    <Button text="Buy"
            onAction="#handleBuy"/>

</VBox>
